<abp-card>
    <abp-card-header>
        <h3>File Upload and Download</h3>
    </abp-card-header>
    <abp-card-body>
        <abp-row>
            <abp-column>
                <h3>Upload File</h3>
                <hr />
                <form method="post" enctype="multipart/form-data">

                    <abp-input asp-for="UISaveEmployeeDto.Name"></abp-input>
                    <abp-input asp-for="UISaveEmployeeDto.ProfilePic"></abp-input>
                    <abp-input asp-for="UISaveEmployeeDto.Evidence1"></abp-input>
                    <abp-input asp-for="UISaveEmployeeDto.Evidence2"></abp-input>
                    <input type="submit" class="btn btn-info" />
                </form>

                <form asp-page="Index" asp-page-handler="DeleteContainer" enctype="multipart/form-data">
                    <h1>Delete Container</h1>
                    <abp-input asp-for="UISaveEmployeeDto.Name"></abp-input>
                    <input type="submit" class="btn btn-info" value="Delete Container"/>
                </form>
                
